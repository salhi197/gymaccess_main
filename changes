

Route::get('/scan/read', function () {
    $path = storage_path('app/scans.txt');
    $value = file_exists($path) ? trim(file_get_contents($path)) : '';
    return response()->json(['value' => $value]);
});

Route::post('/scan/clear', function () {
    file_put_contents(storage_path('app/scans.txt'), '');
    return response()->json(['cleared' => true]);
});
