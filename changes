<?php

namespace App;

use Illuminate\Database\Eloquent\Model;

class Bloque extends Model
{
    protected $fillable = [
        'inscription_id',
        'date_bloque',
        'date_debloque',
        'agent_bloque',
        'agent_debloque'
    ];


    public function agent_bloque()
    {
        $user = User::find($this->agent_bloque);
        return $user['name'] ?? '/';
    }
    public function agent_debloque()
    {
        $user = User::find($this->agent_debloque);
        return $user['name'] ?? '/';
    }
    public function inscription()
    {
        return $this->belongsTo(Inscription::class);
    }
    
}
